<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cameraEditView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photoTaken"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/cameraEditSaveBtn"
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="30dp"
            android:fontFamily="HelveticaNeue-Light"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/cameraEditCaptionBtn"
            android:text="TXT"
            android:layout_width="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:fontFamily="HelveticaNeue-Light"
            android:background="@color/black"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/cameraEditBackBtn"
        android:text="BACK"
        android:layout_width="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_height="30dp"
        android:fontFamily="HelveticaNeue-Light"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/cameraEditUploadBtn"
        android:text="UPLOAD"
        android:layout_width="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="30dp"
        android:fontFamily="HelveticaNeue-Light"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <no.twomonkeys.sneek.app.components.Camera.CaptionEditView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraEditCaptionEdit">
    </no.twomonkeys.sneek.app.components.Camera.CaptionEditView>

    <no.twomonkeys.sneek.app.shared.views.CaptionView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraEditCaptionView">
    </no.twomonkeys.sneek.app.shared.views.CaptionView>
    
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/cyan"
        android:id="@+id/progressUpload"/>


</RelativeLayout>